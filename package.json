{
  "name": "red-zoom",
  "version": "0.14.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "build-library": "ng build ngx-red-zoom --watch",
    "build-docs": "ng build demo --configuration production --base-href /red-zoom-angular/ --output-path docs",
    "demo:build": "ng build demo --configuration production",
    "library:build": "ng build ngx-red-zoom --configuration production",
    "pack": "npm run library:build && npm run pack:scss",
    "pack:scss": "gulp pack",
    "ci:test": "ng test --no-watch --code-coverage --browsers ChromeHeadless --source-map true",
    "ci:lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.11",
    "@angular/common": "^19.2.11",
    "@angular/compiler": "^19.2.11",
    "@angular/core": "^19.2.11",
    "@angular/forms": "^19.2.11",
    "@angular/platform-browser": "^19.2.11",
    "@angular/platform-browser-dynamic": "^19.2.11",
    "@angular/router": "^19.2.11",
    "angulartics2": "^12.2.1",
    "github-buttons": "^2.28.0",
    "highlight.js": "^11.10.0",
    "ngx-owl-carousel-o": "^19.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.12",
    "@angular/cli": "^19.2.12",
    "@angular/compiler-cli": "^19.2.11",
    "@angular/language-service": "^19.2.11",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.14.11",
    "angular-eslint": "19.4.0",
    "del": "^6.1.1",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.8.1",
    "gulp": "^4.0.2",
    "jasmine-core": "^5.1.2",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.2",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.32.1"
  }
}
